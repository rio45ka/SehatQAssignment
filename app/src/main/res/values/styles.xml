<resources>
    <!--Style for EditText-->
    <style name="Input.Type1" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textHintColor</item>
        <item name="android:background">@drawable/bg_input_type1</item>
    </style>

    <!--Style for Button-->
    <style name="Button.Type1" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_type1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
    </style>

    <style name="Button.Type2" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_type2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
    </style>

    <style name="Button.Facebook" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_facebook</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
    </style>



</resources>